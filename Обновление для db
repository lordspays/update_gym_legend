async def get_admin_level(user_id: int) -> int:
    """ĞŸĞ¾Ğ»ÑƒÑ‡Ğ¸Ñ‚ÑŒ ÑƒÑ€Ğ¾Ğ²ĞµĞ½ÑŒ Ğ°Ğ´Ğ¼Ğ¸Ğ½Ğ¸ÑÑ‚Ñ€Ğ°Ñ‚Ğ¾Ñ€Ğ° (ÑƒÑÑ‚Ğ°Ñ€ĞµĞ²ÑˆĞ°Ñ Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ñ, Ğ¸ÑĞ¿Ğ¾Ğ»ÑŒĞ·ÑƒĞ¹Ñ‚Ğµ get_admin_access_level)"""
    if user_id == settings.CREATOR_ID:
        return 1
    
    player = await get_player(user_id)
    if player:
        return player.get("admin_level", 0)
    return 0
